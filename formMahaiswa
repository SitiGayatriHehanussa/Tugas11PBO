    private void GetData() {
        try {
            
            java.sql.Connection conn = (java.sql.Connection)tugaspbo11.koneksi.koneksiDB();
            java.sql.Statement stm = conn.createStatement();
            java.sql.ResultSet sql = stm.executeQuery("SELECT * FROM mahasiswa"); 
            System.out.print(sql);
            jTable1.setModel(DbUtils.resultSetToTableModel(sql));
        } catch (Exception e) {
        }
    }
