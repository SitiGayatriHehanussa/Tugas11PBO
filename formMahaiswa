    private void saveActionPerformed(java.awt.event.ActionEvent evt) {                                     
           // TODO add your handling code here:
            if (databaru == true) {
            try {
                String sql = "INSERT INTO tabel_mahasiswa values('"+nomhs.getText()+"','"
                    +nomhs.getText()+"','"
                    +nama.getText()+"','"
                    +jurusan.getText()+"','";
                System.out.println(sql);
                
                java.sql.Connection conn = (java.sql.Connection)tugaspbo11.koneksi.koneksiDB();
                java.sql.PreparedStatement pst = conn.prepareStatement(sql);
                pst.execute();
                JOptionPane.showMessageDialog(null, "berhasil disimpan");
                clearTextBoxs();
            } catch (SQLException | HeadlessException e ) {
                JOptionPane.showMessageDialog(null, e);
            } 
        } else {
            
            try {
                String sql = "update mahasiswa set "
                    + "nomhs='"+nomhs.getText()+"',"
                    + "nama='"+nama.getText()+"',"
                    + "jurusan='"+jurusan.getText()+"',"
                    + "where nomhs='"+nomhs.getText()+"'";
                
                java.sql.Connection conn = (java.sql.Connection)tugaspbo11.koneksi.koneksiDB();
                java.sql.PreparedStatement pst = conn.prepareStatement(sql);
                pst.execute();
                JOptionPane.showMessageDialog(null, "berhasil diupdate");
            } catch (SQLException | HeadlessException e) {
                JOptionPane.showMessageDialog(null, e);
            }
            
        }
        GetData();

    }                                    

    private void deleteActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        try {
            String sql = "delete from tabel_mahasiswa "
                + "where nomhs='"+nomhs.getText()+"'";
            java.sql.Connection conn = (java.sql.Connection)tugaspbo11.koneksi.koneksiDB();
            java.sql.PreparedStatement pst = conn.prepareStatement(sql);
            pst.execute();
            JOptionPane.showMessageDialog(null, "berhasil dihapus");
            clearTextBoxs();
        } catch (SQLException | HeadlessException e) {
            JOptionPane.showMessageDialog(null, e);
        }
        
        GetData();
    }                                      

    private void updateActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
 
    }                                      
 private void clearTextBoxs(){
        databaru = true;
        nomhs.setText("");
        nama.setText("");
        jurusan.setText("");
    }
    private void resetActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        clearTextBoxs();
       
    }                                     

    private void tableMahasiswaMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // TODO add your handling code here:
         databaru = false;
        try {
            int row = tableMahasiswa.getSelectedRow();
            String table_klik = (tableMahasiswa.getModel().getValueAt(row,0).toString());
            System.out.println("sebelum output tabel klik" + row);
            System.out.println(table_klik);
            java.sql.Connection conn = (java.sql.Connection) tugaspbo11.koneksi.koneksiDB();
            java.sql.Statement stm = conn.createStatement();
            java.sql.ResultSet sql = stm.executeQuery("SELECT * FROM tabel_mahasiswa where nomhs='"+table_klik+"'");
            
            if (sql.next()) {
                String nomhs = sql.getString("nomhs");
                String nama = sql.getString("nama");
                String jurusan = sql.getString("jurusan");
                
                inputNomhs.setText(nomhs);
                inputNama.setText(nama);
                inputJurusan.setText(jurusan);
            }
            
        } catch (Exception e) {
        }
       
    }                                           
         
